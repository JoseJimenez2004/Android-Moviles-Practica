<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alumno: Jose Jimenez"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtPlantilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plantilla: ConstraintLayout"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtAlumno"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/pantalla"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:padding="10dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/txtPlantilla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <GridLayout
        android:id="@+id/gridBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="4"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/pantalla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button android:id="@+id/btn7" android:text="7"/>
        <Button android:id="@+id/btn8" android:text="8"/>
        <Button android:id="@+id/btn9" android:text="9"/>
        <Button android:id="@+id/btnMas" android:text="+"/>

        <Button android:id="@+id/btn4" android:text="4"/>
        <Button android:id="@+id/btn5" android:text="5"/>
        <Button android:id="@+id/btn6" android:text="6"/>
        <Button android:id="@+id/btnIgual" android:text="="/>

        <Button android:id="@+id/btn1" android:text="1"/>
        <Button android:id="@+id/btn2" android:text="2"/>
        <Button android:id="@+id/btn3" android:text="3"/>
        <Button android:id="@+id/btn0" android:text="0"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
