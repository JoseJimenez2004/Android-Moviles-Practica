<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="6"
    android:columnCount="4"
    android:padding="16dp">

    <!-- Nombre y plantilla -->
    <TextView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:text="Alumno: Jose Jimenez"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:text="Plantilla: GridLayout"
        android:textSize="16sp" />

    <!-- Pantalla -->
    <TextView
        android:id="@+id/pantalla"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:background="#E0E0E0"
        android:padding="10dp"
        android:text="0"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Botones -->
    <Button android:id="@+id/btn7" android:text="7"
        android:layout_row="3" android:layout_column="0"/>
    <Button android:id="@+id/btn8" android:text="8"
        android:layout_row="3" android:layout_column="1"/>
    <Button android:id="@+id/btn9" android:text="9"
        android:layout_row="3" android:layout_column="2"/>
    <Button android:id="@+id/btnMas" android:text="+"
        android:layout_row="3" android:layout_column="3"/>

    <Button android:id="@+id/btn4" android:text="4"
        android:layout_row="4" android:layout_column="0"/>
    <Button android:id="@+id/btn5" android:text="5"
        android:layout_row="4" android:layout_column="1"/>
    <Button android:id="@+id/btn6" android:text="6"
        android:layout_row="4" android:layout_column="2"/>
    <Button android:id="@+id/btnIgual" android:text="="
        android:layout_row="4" android:layout_column="3"/>

    <Button android:id="@+id/btn1" android:text="1"
        android:layout_row="5" android:layout_column="0"/>
    <Button android:id="@+id/btn2" android:text="2"
        android:layout_row="5" android:layout_column="1"/>
    <Button android:id="@+id/btn3" android:text="3"
        android:layout_row="5" android:layout_column="2"/>
    <Button android:id="@+id/btn0" android:text="0"
        android:layout_row="5" android:layout_column="3"/>
</GridLayout>
